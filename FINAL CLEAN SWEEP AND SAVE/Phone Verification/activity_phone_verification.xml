<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_phone_verification.xml"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0D142C"
    tools:context=".PhoneVerification">

    <Button
        android:text="Phone Verification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/button" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="354dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:text="This function allows you to anyalze your phone to make this phone will last a long time. To get started please click the button."
        android:textColor="#FFFFFF"
        android:textSize="18dp" />

</RelativeLayout>
