<?xml version="1.0" encoding="utf-8"?> <!--updated design 1/31/20 -Kelley-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0D142C"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".PartialWipe">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="272dp"
        android:layout_height="319dp"
        app:srcCompat="@drawable/web_hi_res_512"
        android:contentDescription="@string/todo" />

    <TextView
        android:layout_width="361dp"
        android:layout_height="wrap_content"
        android:text="@string/click_yes_to_continue_with_the_partial_wipe_click_no_if_you_do_not_want_to_continue_with_the_partial_wipe"
        android:textAlignment="textStart"
        android:textColor="#FFFFFF"
        android:textColorHighlight="#FFFFFF"
        android:textColorHint="#FFFFFF"
        android:textColorLink="#FFFFFF"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="142dp"
        android:layout_height="96dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button1"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="74dp"
            android:layout_height="74dp"
            android:text="@string/yes"
            android:textAlignment="center"
            android:textColor="#0D142C"
            android:textColorHighlight="#0D142C"
            android:textColorHint="#0D142C"
            android:textColorLink="#0D142C"
            android:textSize="24sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button2"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="74dp"
            android:layout_height="74dp"
            android:text="@string/no"
            android:textAlignment="center"
            android:textColor="#0D142C"
            android:textColorHighlight="#0D142C"
            android:textColorHint="#0D142C"
            android:textColorLink="#0D142C"
            android:textSize="24sp"
            android:textStyle="bold" />

    </LinearLayout>

    <Button
        android:id="@+id/button3"
        android:layout_width="174dp"
        android:layout_height="67dp"
        android:text="@string/home_page"
        android:textAlignment="center"
        android:textColor="#0D142C"
        android:textColorHighlight="#0D142C"
        android:textColorHint="#0D142C"
        android:textColorLink="#0D142C"
        android:textSize="24sp"
        android:textStyle="bold" />

